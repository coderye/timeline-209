extends ../layouts/default

mixin post(post)
	.post
		.time
			.year!=post._.publishedDate.format('YYYY')
			.date!=post._.publishedDate.format('MM月DD日')
		a(href='/post/' + post.slug).content
			.inner
				h2 #{post.title}
				div!= post.content.brief

				if post.image.exists
					img(src=post._.image.fit(160,160)).img.pull-right
				if post.content.extended
					p.read-more: a(href='/post/' + post.slug) Read more...

block intro
	.container.title
		h1= data.category ? data.category.name : '所有时间线'

block content
	.container: .row
		.col-sm-12.col-md-12
			if filters.category && !data.category
				h3.text-muted Invalid Category.
			else
				if data.posts.results.length
					.blog
						each post in data.posts.results
							+post(post)
				else
					if data.category
						h3.text-muted There are no posts in the category #{data.category.name}.
					else
						h3.text-muted There are no posts yet.
